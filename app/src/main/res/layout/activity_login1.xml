<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gb"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="com.bhargava.travel.login1">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="Login Form"
        android:textColor="#fff"
        android:textSize="29dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="90dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            android:paddingTop="30dp">


            <EditText
                android:id="@+id/txtEmailLogin"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:alpha="0.75"
                android:background="@drawable/boarder"
                android:drawableStart="@drawable/user"
                android:drawableTint="#FF4081"
                android:hint="Email name"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColorHint="#000000" />


            <EditText
                android:id="@+id/txtPasswordLogin"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:alpha="0.75"
                android:background="@drawable/boarder"
                android:drawableLeft="@drawable/lock"
                android:drawableTint="#FF4081"

                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="#000000"

                />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPasswordLogin"
                android:layout_margin="22dp"
                android:background="#d67601"
                android:onClick="btnUserLogin_Click"
                android:text="Sigin"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="27dp"
        android:onClick="feed"
        android:text="Not have account"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/user_profile_photo"
        android:layout_width="60dp"
        android:layout_height="170dp"

        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_alignTop="@+id/login_title"
        android:layout_marginEnd="137dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/boy"
        android:elevation="4dp" />


</RelativeLayout>
