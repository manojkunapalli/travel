<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bhargava.travel.diet_d2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="11dp"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="377dp"
                android:layout_height="252dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/d2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="You Will Need"
                android:textColor="@color/colorAccentt"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.071"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432" />

            <TextView
                android:id="@+id/textView94"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="An assortment of vegetables. Some of the healthiest options would be carrots, beans, tomatoes, cucumbers, lettuce, and cabbage."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintVertical_bias="0.123" />

            <TextView
                android:id="@+id/textView95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="What You Have To Do "
                android:textColor="@color/colorAccentt"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.098"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView94"
                app:layout_constraintVertical_bias="0.043" />

            <TextView
                android:id="@+id/textView96"
                android:layout_width="347dp"
                android:layout_height="171dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="You have to follow a vegetable-only meal plan on the second day. You can cook the vegetables to make them palatable, or consume them raw. Care should be taken while preparing the vegetables as oil is not allowed. So, forget deep frying your favorite potatoes or eating chips. You can have the vegetables whenever you feel hungry. Flavorings like olive oil or butter can be used sparingly, only if absolutely required."
                android:textAlignment="viewStart"
                android:layout_marginRight="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView94"
                app:layout_constraintVertical_bias="0.363" />

            <TextView
                android:id="@+id/textView97"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foods To Avoid"
                android:textColor="@color/colorAccentt"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/textView98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView99"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                android:text="Fruits – Avoid all fruits on this day\n
Protein – Avoid eating any protein source such as meat, eggs, fish, beans, lentils, and mushrooms.\n
Fats And Oils – Lard, butter, margarine, and safflower oil.\n
Carbs – Avoid all carb-rich foods, including brown rice.\n
Dairy – Full fat milk, full fat yogurt, frozen yogurt, ice cream, and cheese.\n
Beverages – Alcohol, soda, sweetened drinks, fresh fruit juices or smoothies, and packaged fruit juices."
                />
            <TextView
                android:id="@+id/textView101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Substitutes "
                android:textColor="@color/colorAccentt"
                android:layout_marginLeft="10dp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView102"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView103"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                android:text="Potato – Sweet potato or carrots\n
Butter – Margarine or sour cream\n
Cabbage – Bok choy or celery\n
Lettuce – Leek\n
Cucumber – Carrots\n
Onion – Shallots\n
Carrot – Beetroot\n
Broccoli – Cauliflower\n
Bell Pepper – Zucchini\n
Cauliflower – Green beans" />

            <TextView
                android:id="@+id/textView104"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView105"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                android:text="Exercises "
                android:textColor="@color/colorAccentt"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView106"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView108"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                android:text="A similar exercise routine as Day 1, but a slightly strenuous workout plan to help mobilize the fat. You may do these exercises early in the morning or in the evening after office or school."/>
            <TextView
                android:id="@+id/textView111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView109"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                android:text="Surya Namaskar (click here to see the steps to perform Surya Namaskar).\n
Kapalbhati – 50-10 times (take a break if you cannot do it continuously).\n
Baddhakonasana or cobbler pose – 2 sets of 20 reps.\n
Adho Mukha Shvanasana or downward facing dog pose – 2-3 minutes.\n
Rope jumping – 2 sets of 50 reps\n
Arms circles – 1 set of 10 reps (clockwise and anticlockwise)\n
Wrist rotation – 1 set of 10 reps (clockwise and anticlockwise)\n
Shoulder rotation – 1 set of 10 reps (clockwise and anticlockwise)\n
Neck rotation – 1 set of 10 reps (clockwise and anticlockwise)\n
Face exercises"
                />

            <TextView
                android:id="@+id/textView110"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView112"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How You Will Feel By The End Of Day 2 "
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                android:textColor="@color/colorAccent"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"

                android:text="You may start to feel weak from late afternoon on Day 2. Do not worry, this is normal with most low-calorie diet plans. Your body will not get the usual amounts of carbs and hence will react by making you feel slow and weak.
\n\n
Let’s move on to Day 3 and see what’s in store!


"/>
            <TextView
                android:id="@+id/textView115"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
