<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signupimg"

    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="com.bhargava.travel.register">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="Register Form"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="110dp"

        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"

            >



                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/user"
                    android:drawableTint="#FF4081"
                    android:singleLine="true"
                    android:id="@+id/txtEmailRegistration"
                    android:hint="Email name"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/boarder"
                    android:alpha="0.75"
                    android:textColorHint="#000000"

                    />



                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/lock"
                    android:drawableTint="#FF4081"
                    android:hint="Password"
                    android:id="@+id/txtPasswordRegistration"
                    android:inputType="textPassword"
                    android:background="@drawable/boarder"
                    android:textColorHint="#000000"
android:alpha="0.75"
                    />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="#d67601"
                android:id="@+id/btnRegistrationUser"
                android:text="Register"
                android:onClick="btnRegistrationUser_Click"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="27dp"
        android:onClick="feed"
        android:text="Already sigin"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/user_profile_photo"
        android:layout_width="60dp"
        android:layout_height="170dp"

        android:layout_alignTop="@+id/login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/gal"
        android:elevation="4dp" />


</RelativeLayout>


